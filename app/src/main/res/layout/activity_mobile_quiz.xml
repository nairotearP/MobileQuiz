<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false"


    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        tools:context=".MobileQuiz"
        android:background="#EEFFFFFF">

        <!-- Separator side -->
        <LinearLayout
            style="@style/SeparatorL">
            <TextView
                style="@style/SeparatorT"
                android:background="@drawable/gradientleft"/>
            <TextView
                style="@style/SeparatorT"
                android:background="@drawable/gradientright"/>
        </LinearLayout>

        <!-- Title of quiz -->
        <TextView
            android:id="@+id/quiz_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="@string/title"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="#000000"/>

        <!-- Separator side -->
        <LinearLayout
            style="@style/SeparatorL">
            <TextView
                style="@style/SeparatorT"
                android:background="@drawable/gradientleft"/>
            <TextView
                style="@style/SeparatorT"
                android:background="@drawable/gradientright"/>

        </LinearLayout>

        <!-- Question 1 -->
        <TextView
            style="@style/QuestionText"
            android:text="@string/question_one" />

        <EditText
            android:id="@+id/question_one_field"
            style="@style/EditText"
            android:hint="@string/question_hint" />

        <!-- Separator center -->
        <LinearLayout
            style="@style/SeparatorL">
            <TextView
                style="@style/SeparatorT"
                android:background="@drawable/gradientright"/>
            <TextView
                style="@style/SeparatorT"
                android:background="@drawable/gradientleft"/>
        </LinearLayout>
        
        <!-- Question 2 -->
        <TextView
            style="@style/QuestionText"
            android:text="@string/question_two" />

        <RadioGroup
            style="@style/RadioGroup">

            <RadioButton
                android:id="@+id/radio_megahertz"
                style="@style/RadioButton"
                android:text="@string/megahertz" />
            <RadioButton
                android:id="@+id/radio_megabyte"
                style="@style/RadioButton"
                android:text="@string/megabyte" />
            <RadioButton
                android:id="@+id/radio_megapixel"
                style="@style/RadioButton"
                android:text="@string/megapixel" />
        </RadioGroup>

        <!-- Separator center -->
        <LinearLayout
            style="@style/SeparatorL">
            <TextView
                style="@style/SeparatorT"
                android:background="@drawable/gradientright"/>
            <TextView
                style="@style/SeparatorT"
                android:background="@drawable/gradientleft"/>
        </LinearLayout>

        <!-- Question 3 -->
        <TextView
            style="@style/QuestionText"
            android:text="@string/question_three" />

        <EditText
            android:id="@+id/question_three_field"
            style="@style/EditText"
            android:hint="@string/question_hint" />

        <!-- Separator center -->
        <LinearLayout
            style="@style/SeparatorL">
            <TextView
                style="@style/SeparatorT"
                android:background="@drawable/gradientright"/>
            <TextView
                style="@style/SeparatorT"
                android:background="@drawable/gradientleft"/>
        </LinearLayout>

        <!-- Question 4 -->
        <TextView
            style="@style/QuestionText"
            android:text="@string/question_four" />

        <RadioGroup
            style="@style/RadioGroup">

            <RadioButton
                android:id="@+id/radio_hd"
                style="@style/RadioButton"
                android:text="@string/hd_resolution" />
            <RadioButton
                android:id="@+id/radio_fhd"
                style="@style/RadioButton"
                android:text="@string/fhd_resolution" />
            <RadioButton
                android:id="@+id/radio_qhd"
                style="@style/RadioButton"
                android:text="@string/qhd_resolution" />
        </RadioGroup>

        <!-- Separator center -->
        <LinearLayout
            style="@style/SeparatorL">
            <TextView
                style="@style/SeparatorT"
                android:background="@drawable/gradientright"/>
            <TextView
                style="@style/SeparatorT"
                android:background="@drawable/gradientleft"/>
        </LinearLayout>

        <!-- Question 5 -->
        <TextView
            style="@style/QuestionText"
            android:text="@string/question_five" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/LinearLayoutC">

                <CheckBox
                    android:id="@+id/c_dual_sim"
                    style="@style/CheckBox"
                    android:text="@string/c_dual_sim"/>
                <CheckBox
                    android:id="@+id/c_firmware"
                    style="@style/CheckBox"
                    android:text="@string/c_firmware" />
                <CheckBox
                    android:id="@+id/c_tethering"
                    style="@style/CheckBox"
                    android:text="@string/c_tethering"/>
                <CheckBox
                    android:id="@+id/c_microsd"
                    style="@style/CheckBox"
                    android:text="@string/c_micro_sd"/>
                <CheckBox
                    android:id="@+id/c_ram"
                    style="@style/CheckBox"
                    android:text="@string/c_ram"/>
            </LinearLayout>

            <LinearLayout
                style="@style/LinearLayoutC">

                <CheckBox
                    android:id="@+id/c_bezel"
                    style="@style/CheckBox"
                    android:text="@string/c_bezel"/>
                <CheckBox
                    android:id="@+id/c_url"
                    style="@style/CheckBox"
                    android:text="@string/c_url"/>
                <CheckBox
                    android:id="@+id/c_os"
                    style="@style/CheckBox"
                    android:text="@string/c_os"/>
                <CheckBox
                    android:id="@+id/c_ppi"
                    style="@style/CheckBox"
                    android:text="@string/c_ppi"/>
                <CheckBox
                    android:id="@+id/c_mbps"
                    style="@style/CheckBox"
                    android:text="@string/c_mbps"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Separator center -->
        <LinearLayout
            style="@style/SeparatorL">
            <TextView
                style="@style/SeparatorT"
                android:background="@drawable/gradientright"/>
            <TextView
                style="@style/SeparatorT"
                android:background="@drawable/gradientleft"/>
        </LinearLayout>

        <!-- Question 6 -->
        <TextView
            style="@style/QuestionText"
            android:text="@string/question_six" />

        <EditText
            android:id="@+id/question_six_field"
            style="@style/EditText"
            android:hint="@string/question_hint" />

        <!-- Separator side -->
        <LinearLayout
            style="@style/SeparatorL">
            <TextView
                style="@style/SeparatorT"
                android:background="@drawable/gradientleft"/>
            <TextView
                style="@style/SeparatorT"
                android:background="@drawable/gradientright"/>
        </LinearLayout>

        <!-- Submit button -->
        <Button
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="@string/submit_button"
            android:background="@drawable/startbutton"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:onClick="submitAnswers"/>

        <!-- Separator side -->
        <LinearLayout
            style="@style/SeparatorL">
            <TextView
                style="@style/SeparatorT"
                android:background="@drawable/gradientleft"/>
            <TextView
                style="@style/SeparatorT"
                android:background="@drawable/gradientright"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>